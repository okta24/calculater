    </item>
    
    <item>
        
        <shape android:shape="rectangle">  
<gradient 
android:type="linear"
android:startColor="#ffffff"
android:endColor="#0000ff" 
android:angle="270"/>          
   <stroke android:width="1dp" android:color="#000000" />
  
   
        </shape>
        
        
    </item>
</selector>